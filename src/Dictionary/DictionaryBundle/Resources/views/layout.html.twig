<!DOCTYPE >
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% stylesheets
            'bundles/twitter/css/bootstrap.css'
            '@DictionaryBundle/Resources/public/css/*'
        filter='?uglifycss'
        output='css/min.css' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
</head>

<body>

    {% block navigation %}{% endblock navigation %}

    <div class='container'>
        {% block content  %}
        {% endblock  %}
    </div>

    {% javascripts
            '@jquery_and_ui'
            '@bootstrap_js'
            '@DictionaryBundle/Resources/public/js/*'
        filter='?uglifyjs2'
        output='js/min.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% block additionaljs %}
    {% endblock %}
</body>
</html>