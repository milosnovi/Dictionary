<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dictionary.example.class">Dictionary\DictionaryBundle\Model\TranslateManager</parameter>
        <parameter key="translator.google.provider.class">Dictionary\DictionaryBundle\Model\GoogleTranslateProvider</parameter>
    </parameters>

    <services>
        <service id="dictionary.translateManager" class="%dictionary.example.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="dictionary.wordManager" />
            <argument type="service" id="dictionary.eng2srbManager" />
            <argument type="service" id="dictionary.historyManager" />
            <argument type="service" id="translator.google" />
        </service>
        <service id="dictionary.historyManager" class="Dictionary\DictionaryBundle\Model\HistoryManager">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="dictionary.wordManager" class="Dictionary\DictionaryBundle\Model\WordManager">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="dictionary.eng2srbManager" class="Dictionary\DictionaryBundle\Model\Eng2SrbManager">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="dictionary.translator.metak" class="Dictionary\DictionaryBundle\Model\MetakTranslateProvider">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="translator.google" class="%translator.google.provider.class%">
        </service>
    </services>

</container>
