{% extends 'DictionaryBundle::layout.html.twig' %}

{% block navigation %}
    {{ include('DictionaryBundle::navigation.html.twig',{ 'user': app.user } ) }}
{% endblock navigation %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-5">
            <form style="padding: 5px;" method="post" action="{{ path('_translate') }}" >
                <div class="form-row">
                    <input style="width: 240px;height: 58px;font-size: 33px;"name="q" id="search-id" type="search" />

                    <button type="submit" class="sf-button">
                        <span class="border-l">
                            <span class="border-r">
                                <span class="btn-bg">OK</span>
                            </span>
                        </span>
                    </button>
                </div>
            </form>
        </div>

        <div class="col-md-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4>MOST OFFEN</h4>
                </div>
                <div class="panel-body">
                    {% for key, hit in historyHits %}
                        {% set pileType = hit.piles_type %}
                        {% if loop.index % 2 %}
                            {% set class = 'word_history_white' %}
                        {% else %}
                            {% set class = 'word_history_grey' %}
                        {% endif %}
                        <div id="history_item_{{ hit.history_id }}" class="{{ class }}">
                            <div style="float: right">
                                <a href="{{ path('move_2_piles', {'word': hit.word_id, 'pileId': 1 }) }}" class="pile btn btn-sm btn-success {% if pileType == 1 %} disabled {% endif %}" style="line-height: 1;">KNOW</a>
                                <a href="{{ path('move_2_piles', {'word': hit.word_id, 'pileId': 2 }) }}" class="pile btn btn-sm btn-warning {% if pileType == 2 %} disabled {% endif %}" style="line-height: 1;">ALMOST</a>
                                <a href="{{ path('move_2_piles', {'word': hit.word_id, 'pileId': 4 }) }}" class="pile btn btn-sm btn-danger  {% if pileType == 4 %} disabled {% endif %}" style="line-height: 1;">DON'T KNOW</a>
                                <a class="history_delete_item" data-id="{{ hit.history_id }}" href="{{ path('delete_history_item', {'id': hit.history_id}) }}"><span class='glyphicon glyphicon-cog'></span></a>
                            </div>
                            <span class="history_key">{{ hit.name }}</span><br/>
                            {% for type, hitEntry in hit.translations %}
                                <div class="wordByType">
                                    <span class="wordType">{{ type }}:</span>
                                    {{ hitEntry | join(', ')}}
                                </div>
                            {%  endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block additionaljs %}

    <script type="text/javascript">
        $(document).ready(function() {
            Dictionary.initPilesForms();
        });
    </script>
{% endblock %}
