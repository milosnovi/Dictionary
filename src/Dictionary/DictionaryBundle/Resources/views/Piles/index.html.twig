{% extends 'DictionaryBundle::layout.html.twig' %}

{% block navigation %}
    {{ include('DictionaryBundle::navigation.html.twig',{ 'user': app.user } ) }}
{% endblock navigation %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="row">
            {% for key, pileType in resultToReturn %}
                <div class="col-md-4">
                        {% if key == 1 %}
                            <div class="panel panel-success">
                            <div class="panel-heading">{% trans %}KNOW{% endtrans %}</div>
                        {% elseif key == 2 %}
                            <div class="panel panel-warning">
                            <div class="panel-heading">{% trans %}ALMOST{% endtrans %}</div>
                        {% elseif key == 4  %}
                            <div class="panel panel-danger">
                            <div class="panel-heading">{% trans %}DONTKNOW{% endtrans %}</div>
                        {% endif %}
                        <div class="panel-body">
                            {% for pile  in pileType %}
                                {% if loop.index % 2 %}
                                    {% set class = 'word_history_white' %}
                                {% else %}
                                    {% set class = 'word_history_grey' %}
                                {% endif %}
                                <div id="pile_item_{{ pile.pile.id }}" class="{{ class }}">
                                    <a class="pile_delete_item" data-id="{{ pile.pile.id }}" href="{{ path('delete_pile_item', {'id': pile.pile.id}) }}">
                                        <span style="float:right" class="glyphicon glyphicon-trash"></span>
                                    </a>

                                    <span class="history_key">{{ pile.translation.name }}</span>
                                    <br/>
                                    {% for type, translation in pile.translation.translations %}
                                        <div class="wordByType">
                                            <span class="wordType">{{ type|upper|trans}}:</span>
                                            {{ translation | join(', ')}}
                                        </div>
                                    {%  endfor %}
                                </div>
                            {% else %}
                                <div>No piles found</div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}
    {% block additionaljs %}
    <script type="text/javascript">
        $(document).ready(function() {
            Dictionary.initPilesForms();
        });
    </script>
{% endblock %}