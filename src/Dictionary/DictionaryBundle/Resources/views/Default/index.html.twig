{% extends 'DictionaryBundle::layout.html.twig' %}

{% block navigation %}
    {{ include('DictionaryBundle::navigation.html.twig',{ 'user': app.user } ) }}
{% endblock navigation %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-5 col-xs-12">

            <form style="padding: 5px;" method="post" action="{{ path('_translate') }}" class="form-horizontal" role="form">
                <div class="form-group">
                    <div class="col-sm-10">
                        <input style=";height: 58px;font-size: 33px;" name="q" class="form-control" placeholder={% if latestWord %}{{ latestWord }}{% else %}"Translate"{% endif %} >
                    </div>
                </div>
            </form>

            <div id="latestResult">
                {% if latestSearch%}
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                            {% for key, translations in latestSearch.translations %}
                                <tr>
                                    <td colspan="3"><b><span>{{ key }}</span></b></td>
                                </tr>
                                {% for word in translations %}
                                    <tr>
                                        <td>&nbsp;</td>
                                        <td><span>{{ word }}</span></td>
                                        {% if latestSearchSynonyms is not empty and latestSearchSynonyms[word] is not empty %}
                                            {%  set synonyms =  latestSearchSynonyms[word]['translation'] %}
                                            {% if synonyms is not empty %}
                                                <td>
                                                    {% for synonym in synonyms %}
                                                        <span class="synonym">
                                                            <a href="{{ path('_home', {'word': synonym}) }}">{{ synonym }}</a>
                                                        </span>
                                                    {% endfor %}
                                                </td>
                                            {% endif %}
                                        {% endif %}
                                    </tr>
                                {%  endfor %}
                            {%  endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="col-md-6 col-xs-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4>HISTORY</h4>
                </div>
                <div class="panel-body">
                    {% for key, history in histories %}
                        {% if loop.index % 2 %}
                            {% set class = 'word_history_white' %}
                        {% else %}
                            {% set class = 'word_history_grey' %}
                        {% endif %}
                        <div class="{{ class }}">
                            <div style="float: right">
                                <a href="{{ path('move_2_piles', {'word': history.id, 'pileId': 1 }) }}" class="btn btn-sm btn-success" style="line-height: 1;">KNOW</a>
                                <a href="{{ path('move_2_piles', {'word': history.id, 'pileId': 2 }) }}" class="btn btn-sm btn-warning" style="line-height: 1;">ALMOST</a>
                                <a href="{{ path('move_2_piles', {'word': history.id, 'pileId': 4 }) }}" class="btn btn-sm btn-danger" style="line-height: 1;">DON'T KNOW</a>
                            </div>
                            <span class="history_key">{{ key }}</span>
                            <br/>
                            {% for type, historyEntry in history.translations %}
                                <div class="wordByType">
                                    <span class="wordType">{{ type }}:</span>
                                    {{ historyEntry | join(', ')}}
                                </div>
                            {%  endfor %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    </div>

{% endblock %}
{% block additionaljs %}

    <script type="text/javascript">
        $(document).ready(function() {
            Dictionary.initPilesForms();
        });
    </script>
{% endblock %}

